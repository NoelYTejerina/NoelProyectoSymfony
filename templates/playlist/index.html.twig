{% extends 'base.html.twig' %}

{% block title %}Playlists{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/detalles.css') }}">
{% endblock %}

{% block body %}
    <h1>{{ playlist.nombre }}</h1>
    <h2>Canciones:</h2>
    <ul>
        {% for cancion in playlist.canciones %}
            <li><a href="{{ path('app_cancion_detalle', { id: cancion.id }) }}">{{ cancion.titulo }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}

